### Gate
id=219
name=Gate
group=building
icon=gfx\gate.bmp
model=gfx\gate.b3d
scale=2
health=8000
mat=wood
col=3
script=start
	on:build_finish {
		event "gatebuild",0,0;
	}
	on:load {
		local $state;
		if ($state==1){
			model "gfx/gate_closed.b3d";
			scale 1,1,1;
		}
	}
	on:use {
		local $state;
		if ($notuseable==0){
			if ($state==0){
				process "Close gate",500;
				$state=1;
				play "vehicle_move.wav";
				model "gfx/gate_closed.b3d";
				scale 1,1,1;
			}else{
				process "Open gate",500;
				$state=0;
				play "vehicle_move.wav";
				model "gfx/gate.b3d";
				scale 1,1,1;
			}
		}else{
			speech "negative";
			msg "I can't move it!",3;
		}
	}
	on:toggle {
		if ($state==0){
			$state=1;
			play "vehicle_move.wav";
			model "gfx/gate_closed.b3d";
			scale 1,1,1;
		}else{
			$state=0;
			play "vehicle_move.wav";
			model "gfx/gate.b3d";
			scale 1,1,1;
		}		
	}
script=end

