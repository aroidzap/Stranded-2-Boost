### Trap
id=205
name=Trap
group=building
icon=gfx\trap.bmp
model=gfx\trap.b3d
health=300
mat=wood
fx=16
scale=1.3,1,1
script=start
	on:build_finish {
		event "trapbuild",0,0;
	}
	on:load {
		local $state;
		if ($state==1){
			model "gfx/trap_closed.b3d";
			scale 1,1,1;
		}
	}
	on:use {
		local $state;
		if ($state==0){
			process "closing trap",500;
			$state=1;
			play "vehicle_move.wav";
			model "gfx/trap_closed.b3d";
			scale 1,1,1;
		}else{
			process "opening trap",500;
			$state=0;
			play "vehicle_move.wav";
			model "gfx/trap.b3d";
			scale 1,1,1;
		}
	}
	on:changeday {
		local $state;
		if ($state==0){
			if (random(5)!=1){
				local $r,$x,$z;
				$x=getx("self");
				$z=getz("self");
				$r=random(1,5);
				if ($r==1){ create "unit",3,$x,$z; }
				if ($r==2){ create "unit",14,$x,$z; }
				if ($r==3){ create "unit",18,$x,$z; }
				if ($r==4){ create "unit",20,$x,$z; }				
				if ($r==5){ create "unit",26,$x,$z; }
				freevar $r,$x,$z;
				$state=1;
				model "gfx/trap_closed.b3d";
				scale 1,1,1;
			}
		}
	}
script=end
description=start
Catches little animals if its opened.
description=end

