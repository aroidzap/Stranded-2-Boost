					$id=create("item",89);
				}
				store $id,"self";
				freevar $id,$r;
				addstate "self",25;		
			}
		}
		if ($age>0){
			$age++;
			if ($age>10){
				if (random(5)==1){
					alterobject "self",209;
				}
			}
		}
	}
	on:use {
		if (count_stored("self")>0){
			exchange "self",0;
			timer "self",100,1,"load"; 
		}else{
			speech "negative";
			msg "It is empty!",3;
		}
	}
