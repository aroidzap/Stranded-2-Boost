### Bark
id=107
name=Bark
group=material
icon=gfx\bark.bmp
model=gfx\bark.b3d
scale=0.4
fx=16
weight=40
info=a piece of bark. Maybe I can create fire with this...
script=start
	on:use {
		process "searching",1500;
		local $r;
		local $id;
		$r=random(1,3);
		if (random(10)==1){
			speech "negative",1,2;
			play "mat_wood1.wav";
			msg "The bark is broken!",3;
			freestored "unit",1,107,1;		
		}else{
			if ($r==1){
				speech "positive";
				play "mat_leaf1.wav";
				msg "Insects!",4;
				$id=create("item",98);
				store $id,"unit",1;
			}elseif ($r==2){
				play "mat_leaf1.wav";
				speech "positive";
				msg "Slime!",4;
				$id=create("item",99);
				store $id,"unit",1;
			}else{
				play "mat_leaf1.wav";
				msg "I found nothing!",3;
			}	
		}
	}
script=end