### Liana
id=26
name=Vine
group=material
icon=gfx\liana.bmp
model=gfx\liana.b3d
scale=0.4
mat=leaf
weight=300
behaviour=fastblade
damage=0
rate=1000
info=a vine. I can use it as a whip to drove animals
script=start
	on:impact {
		play "whip.wav";
		$tmp=impact_class();
		$tmp2=impact_id();
		//2 Damage on everything which is no flesh
		if (compare_material($tmp,$tmp2,"flesh")==0){
			damage $tmp,$tmp2,2;
		}
		freevar $tmp;
		freevar $tmp2;
	}
script=end

